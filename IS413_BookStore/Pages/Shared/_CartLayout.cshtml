@{
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/main.css" rel="stylesheet" />
</head>
<body>

    <header class="header bg-info">
        <h1 class="logo"><a asp.controller="Home" asp-action="Index"><img src="~/img/bookIcon.png" width="55"></a></h1>
        <ul class="main-nav">
            <!-- Add Navigation Links here-->
        </ul>
    </header>

    <br /><br />
    <h1 class="text-center">@ViewData["Heading"]</h1><br />

    <div class="row m-1 p-1">
        @RenderBody()
    </div>

    @RenderSection("PageInfo", required: false)


    <footer class="footer">
        Anthony Sharp - IS 413 Book Store
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>