@{
    ViewData["Title"] = "Home Page";
    ViewData["Heading"] = "Book Store";
}

@model BookListViewModel

<table class="table table-striped thead-dark tableCustom">
    <tr>
        <th>Book ID</th>
        <th>Title</th>
        <th>Author</th>
        <th>Publisher</th>
        <th>ISBN</th>
        <th>Classification</th>
        <th>Category</th>
        <th>Number of Pages</th>
        <th>Price</th>
        <th style="min-width:"></th>
    </tr>
    @foreach (var book in Model.Books)
    {
       <partial name="BookSummary" model="book" />
    }

</table>


@section PageInfo
{
    <div class="mt-5 mb-5" page-model="@Model.PagingInfo" page-action="Index"
         page-classes-enabled="true" page-class="btn ml-1 mr-1 pl-3 pr-3 mb-5"
         page-class-normal="btn-outline-secondary" page-class-selected="btn-info"
         page-url-category="Model.CurrentCategory">

    </div>
}

