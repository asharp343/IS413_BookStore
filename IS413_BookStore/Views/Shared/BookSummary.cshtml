@model Book

<tr>
    <td>@Model.BookId</td>
    <td>@Model.Title</td>
    <td>@Model.AuthorLastName, @Model.AuthorFirstName</td>
    <td>@Model.Publisher</td>
    <td>@Model.ISBN</td>
    <td>@Model.Classification</td>
    <td>@Model.Category</td>
    <td>@Model.NumPages</td>
    @if (Model.Price < 10)
    {
        <td class="badge badge-danger mt-1">$@Model.Price</td>
    }
    else
    {
        <td>$@Model.Price</td>
    }


</tr>