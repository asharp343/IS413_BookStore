@model Book

<tr>
    <td class="align-middle">@Model.BookId</td>
    <td class="align-middle">@Model.Title</td>
    <td class="align-middle">@Model.AuthorLastName, @Model.AuthorFirstName</td>
    <td class="align-middle">@Model.Publisher</td>
    <td class="align-middle">@Model.ISBN</td>
    <td class="align-middle">@Model.Classification</td>
    <td class="align-middle">@Model.Category</td>
    <td class="align-middle">@Model.NumPages</td>
    <td class="align-middle">$@Model.Price</td>
    

    <td class="align-middle">
        <form class="align-middle" id="Model.BookId" asp-page="/Purchase" method="post">
            <input type="hidden" asp-for="BookId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                <button type="submit" class="btn-info btn-sm pull-right" style="float:right">
                    Add to Cart
                </button>

            </span>

        </form>

    </td>



</tr>